{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lufthansa-task/data-source": ["libs/data-source/src/index.ts"],
      "@lufthansa-task/layout": ["libs/layout/src/index.ts"],
      "@movie/features/*": ["apps/lufthansa-task/src/app/features/*"],
      "@movie/shared/*": ["apps/lufthansa-task/src/app/shared/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
